@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Login" >
    <div asp-validation-summary="All" class="text-alert text-danger"></div>
    <input class="text email" type="email" asp-for="Email" placeholder="Email" required=""/>
    <input class="text" type="password" asp-for="Password" placeholder="Password" required=""/>
    <div class="wthree-text">
        <label class="anim">
            <input type="checkbox" asp-for="RememberMe" class="checkbox">
            <span>Remember Me</span>
        </label>
        <div class="clear"> </div>
    </div>
    <input type="submit" value="Sign In">
</form>
<a class="text-dark" asp-action="ForgetPassword">Forget Password?</a>
<p class="mt-3">Does Not Have an Account? <a asp-action="Register" class="btn btn-primary"> Register Now!</a></p>



@section Scripts{
            <partial name="_ValidationScriptsPartial" />
}
