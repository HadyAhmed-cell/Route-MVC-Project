@model IEnumerable<EmployeeViewModel>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>All Employees</h1>

    <br />
    <a asp-action="Create" class="btn btn-primary" asp-controller="Employee">Create New Employee</a>
    <br />
    <br>
    <form class="my-3" asp-action="Index" asp-controller="Employee">
        <div classclass="row">
            <div class="col-sm-8">
                <input placeholder="Search By Name" name="SearchValue" class="form-control" />

            </div>
            <div class="col-sm-8">
                <input type="submit" value="Search" class="btn btn-success btn-block" />
            </div>
        </div>


</form>

@{
    if (Model.Count()>0)
    {
        <table class="table table-stripped table-hover">
        <thead>
        <tr>
        <th>@Html.DisplayNameFor(m=>m.Name)</th>
                 
                          <th>@Html.DisplayNameFor(m=>m.Age)</th>
                                  <th>@Html.DisplayNameFor(m=>m.Address)</th>
                                   
                                            <th>@Html.DisplayNameFor(m=>m.ImgName)</th>
                                                     <th>@Html.DisplayNameFor(m=>m.Email)</th>
                                                              <th>@Html.DisplayNameFor(m=>m.PhoneNumber)</th>
                                                                       <th>@Html.DisplayNameFor(m=>m.Salary)</th>
                                                                                <th>@Html.DisplayNameFor(m=>m.HireDate)</th>
                                                                                         <th>@Html.DisplayNameFor(m=>m.IsActive)</th>
                                                                                                 <th>@Html.DisplayNameFor(m=>m.department.Name)</th>
                                                                                                 <th>Details</th>
                                                                                                 <th>Update</th>
                                                                                                         <th>Delete</th>
        </tr>
        </thead>

        <tbody>
        @foreach(var item in Model){
            <tr>
            <td>@item.Name</td>
                                    <td>@item.Age</td>
                                                <td>@item.Address</td>
                                                <td><img asp-append-version id="empImg" src="~/files/imgs/@item.ImgName" class="img-circle" height="40" width="40" /></td>
                                                            <td>@item.Email</td>
                                                                        <td>@item.PhoneNumber</td>
                                                                                   <td>@item.Salary</td>
                                                                                               <td>@item.HireDate</td>
                                                                                                            <td>@item.IsActive</td>
                                                                                                                        <td>@item.department?.Name</td>
                                                                                                            <partial name="_ButtonsPartialView" model="item.Id.ToString()" />
            </tr>
        }
        </tbody>
        </table>
        
    }

    else{
        <div class="alert alert-warning">
        <h4>
        No Employees Found
        </h4>
        </div>
    }
}